@page
@model Pizzaria.Pages.Cardapio.CreateModel
@using PizzariaLibrary.Models

@{
    var pizza = new Pizza();
}

<form method="post">
    <div class="pizza-form">
        <div class="pizza-form-div">
            <label asp-for="@pizza.Nome" class="pizza-form-label"></label>
            <input type='text' class='pizza-form-textbox' asp-for="@pizza.Nome" placeholder="Nome da Pizza"/>
            <span asp-validation-for="@pizza.Nome"></span>
        </div>
        <div class="pizza-form-div">
            <label asp-for="@pizza.Descricao" class="pizza-form-label"></label>
            <input type='text' class='pizza-form-textbox' asp-for="@pizza.Descricao" placeholder="Descrição/Ingredientes" />
            <span asp-validation-for="@pizza.Descricao"></span>
        </div>
        <div class="pizza-form-div">
            <label asp-for="@pizza.Tipo" class="pizza-form-label"></label>
            <input type='text' class='pizza-form-textbox' asp-for="@pizza.Tipo" placeholder="Salgada/Doce" />
            <span asp-validation-for="@pizza.Tipo"></span>
        </div>
        <div class="pizza-form-div" >
            <label asp-for="@pizza.Valor" class="pizza-form-label"></label>
            <input type='text' class='pizza-form-textbox' asp-for="@pizza.Valor" placeholder="R$" />
            <span asp-validation-for="@pizza.Valor"></span>
        </div>
    </div>

    <div class="salvar-button-div">
        <button class="salvar-button" type="submit"> Salvar </button>
    </div>
</form>



